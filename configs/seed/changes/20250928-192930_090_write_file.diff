+# Test script for agent.py
+import unittest
+import sys
+sys.path.append('/home/arthur/Projetos/A3X/configs')
+from agent import Agent
+
+class TestAgent(unittest.TestCase):
+    def setUp(self):
+        self.agent = Agent()
+
+    def test_initialization(self):
+        self.assertIsInstance(self.agent, Agent)
+        self.assertEqual(self.agent.max_depth, 5)  # Assuming default
+
+    def test_recursion_monitoring(self):
+        # Simulate recursion with depth >5 and check auto-adjust based on success_rate
+        self.agent.actions_success_rate = 0.95  # >0.9
+        adjusted_depth = self.agent.adjust_depth(6)
+        self.assertGreater(adjusted_depth, 5)
+
+    def test_metrics_feedback(self):
+        self.agent.update_metrics(success=True)
+        self.assertEqual(self.agent.actions_success_rate, 1.0)
+
